{
    "version": 2,
    "builds": [
        {
            "src": "main_api/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "backend/build_files.sh",
            "use": "@now/static-build"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "main_api/wsgi.py"
        }
    ]
}